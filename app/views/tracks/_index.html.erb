<h3 class="readme-header">Hot tracks</h3>
 <% @tracks.each do |track| %>
<div class="product">
  <div class='product-upvote'>
    <div class="product-arrow"></div>
    <div class='product-count'>95</div>
  </div>
  <img src="images/kudoz.jpg" alt="" class="product-image hidden-xs">
  <div class='product-body'>
   <h5><%= track.user.username %></h5>
     
   <p><%= track.genre %></p>
   <small><%= track.version %></small>
  </div>
  <ul class="list-inline product-controls product-controls-hidden hidden-sm hidden-xs">
    <li><a href=""><i class="fa fa-heart"></i></a></li>
    <li><%= link_to track.name, track_path(track) %><i class="fa fa-share"></i></a></li>
    <li><a href=""><i class="fa fa-star"></i></a></li>
  </ul>
</div>
<% end %>







<div class= "container list no">
 
  
  <div class = "hot-tracks">
   
   <% @tracks.each do |track| %>
   <div class="row">
  <div class="col-md-8"><h1>Hot tracks</h1></div>
   

   <h5><%= track.user.username %></h5>
   <h5><%= link_to track.name, track_path(track) %></h5>
   <h5><%= track.version %></h5>
   <h5><%= track.genre %></h5>
   <%= pluralize(track.votes.count, "vote") %>
   <div class="vote-buttons">
      <%= button_to '-1', downvote_track_path(track), method: :patch, class: "btn-vote-down" %>
      <%= button_to '+1', upvote_track_path(track), method: :patch, class: "btn-vote-up" %></div>
      </div>
  </div>

<% end %>
</div>







